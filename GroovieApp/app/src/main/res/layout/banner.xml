<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginTop = "10dp"
    android:layout_marginLeft = "10dp"
    android:layout_marginRight = "10dp"
    android:layout_marginBottom="10dp"
    card_view:cardElevation="0dp"
    android:id="@+id/banner_cardview">
    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent">

        <me.groovie.groovieapp.custom.FixedImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/movie_banner_imageview"
            android:layout_gravity="center_horizontal"
            android:src="@color/darkgrey"/>

        <TextView
            android:id="@+id/movie_name_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop ="12dp"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:textSize="16sp"
            android:text="Movie Name"
            android:textColor="@color/darkgrey"/>
        <TextView
            android:id="@+id/movie_rating_textview"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:textSize="14sp"
            android:text="Rating: 90%"
            android:layout_marginBottom ="12dp"
            android:textColor="@color/lightgrey"/>

    </LinearLayout>

</android.support.v7.widget.CardView>